<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/ll_car_item"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/car_item_iv_car_layout_marginLeft"
        android:layout_marginRight="@dimen/car_item_iv_car_layout_marginLeft"
        android:layout_marginTop="@dimen/car_item_iv_car_layout_marginTop"
        android:layout_marginBottom="@dimen/car_item_iv_car_layout_marginBottom"
        android:id="@+id/iv_car"
        android:layout_height="@dimen/car_item_iv_car_layout_height" />

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/ll_oval_layout_marginRight"
        android:orientation="horizontal"
        android:weightSum="5"
        android:id="@+id/ll_oval"
        android:background="@drawable/oval_design"
        android:layout_height="@dimen/ll_oval_layout_height">
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_carname"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/ll_carname_layout_margin"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/item_tv_carname"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/item_tv_carname_textSize"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/item_tv_carnumber"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:singleLine="true"
                android:textSize="@dimen/item_tv_carnumber_textSize"
                android:layout_height="wrap_content"
                android:text=""/>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:text=""
                android:id="@+id/item_tv_kmrun"
                android:textSize="@dimen/item_tv_kmrun_textSize"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>