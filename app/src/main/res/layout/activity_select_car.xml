<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".activity.CarInfoActivity">

    <include
        android:layout_width="match_parent"
        android:id="@+id/custom_toolbar"
        android:visibility="gone"
        android:layout_height="wrap_content"
        layout="@layout/pink_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="@dimen/iv_car_layout_width"
                android:id="@+id/iv_car"
                android:src="@drawable/add_vehicle_add_car_screen"
                android:layout_height="@dimen/iv_car_layout_height" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Your Car"
                android:layout_marginTop="@dimen/tv_signup_layout_marginTop"
                android:layout_below="@+id/iv_car"
                android:textSize="@dimen/tv_signup_textSize"
                android:textColor="@color/splash_bg"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/et_name_textSize"
                android:textColor="@android:color/darker_gray"
                android:text="Help us know what car you own."
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/et_name_textSize"
                android:textColor="@android:color/darker_gray"
                android:text="Tell us the brand, model, make etc."
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />



            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/btn_proceed2_layout_marginTop"
                android:text="Proceed"
                android:textSize="@dimen/tv_proceed_textSize"
                android:textColor="@android:color/white"
                android:background="@drawable/button"
                android:id="@+id/btn_proceed2"
                android:layout_marginLeft="@dimen/et_name_layout_marginLeft_marginRight"
                android:layout_marginRight="@dimen/et_name_layout_marginLeft_marginRight"
                android:layout_height="@dimen/btn_next_layout_height"
                android:layout_gravity="center_horizontal"/>


        </LinearLayout>



    </LinearLayout>


</LinearLayout>