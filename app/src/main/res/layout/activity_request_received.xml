<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".activity.RequestReceivedActivity">

    <include
        android:layout_width="match_parent"
        android:id="@+id/custom_toolbar"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        layout="@layout/green_toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/settings_icon"
                android:layout_width="@dimen/settings_icon_layout_width_height"
                android:src="@drawable/green_settings"
                android:layout_height="@dimen/settings_icon_layout_width_height" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/tv_yourrequest_textSize"
                android:id="@+id/tv_yourrequest"
                android:textColor="@android:color/holo_green_dark"
                android:layout_height="wrap_content"
                android:text="Your Request"/>


            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/tv_yourrequest_textSize"
                android:id="@+id/tv_hasbeen"
                android:textColor="@android:color/holo_green_dark"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="has been received."/>

            <TextView
                android:layout_marginTop="@dimen/tv_youll_layout_marginTop"
                android:id="@+id/tv_youll"
                android:textSize="@dimen/tv_youll_textSize"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="You'll get a confirmation in the next"
                android:textColor="@android:color/holo_green_dark"/>


            <TextView
                android:id="@+id/tv_working"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tv_youll_textSize"
                android:text="24 working hours"
                android:textColor="@android:color/holo_green_dark"/>




        </LinearLayout>







    </LinearLayout>





</LinearLayout>